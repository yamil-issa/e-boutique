{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<h1>Produits<h1>
{% for product in products %}

<h1>{{ product.name }}</h1>
<p>{{ product.description}}</p>
<p>{{ product.price}} euros</p>
<a href={{ path('cart_add', {id: product.id}) }}>Ajouter au panier<a/>
<hr>

{% endfor %}

{% endblock %}
